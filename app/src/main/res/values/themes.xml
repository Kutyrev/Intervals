<resources>
    <!-- Base application theme. -->
    <style name="Theme.Intervals" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue_a100</item>
        <item name="colorPrimaryVariant">@color/lightblue_a100_l</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_900</item>
        <item name="colorSecondaryVariant">@color/cyan_900_l</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lightblue_a100_d</item>
    </style>

    <style name="Theme.Intervals.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Intervals.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Intervals.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>